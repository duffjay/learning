{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "hello world 2.0",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-g",
                "GTK/helloworld2.c",
                "-o",
                "bin/helloworld2",
                "`pkg-config",
                "--cflags",
                "gtk+-2.0`",
                "`pkg-config",
                "--libs",
                "gtk+-2.0`"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}